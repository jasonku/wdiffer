- content_for :title, 'wdiffer'

#home
  #header
    %h1
      = link_to 'wdiffer', :root
    .about-link
      = link_to '(about)', :about, target: '_blank'
  #results
    %p.results.js-results
    .loader.js-loader
      = image_tag 'loader.gif'
  #form
    = form_tag do
      .expected
        %p
          = label_tag :expected
          %span.js-hide-expected
            = link_to '(hide)', '#'
        = text_area_tag :expected, nil, placeholder: "All Scripture is inspired by God and profitable for teaching, for reproof, for correction, for training in righteousness; so that the man of God may be adequate, equipped for every good work.", class: 'js-expected'
      .actual
        %p
          = label_tag :actual
        = text_area_tag :actual, nil, placeholder: "<Your attempt to recall 2 Timothy 3:16-17>", class: 'js-actual'
      // TODO
      .options
        %p
          = check_box_tag 'ignore_case', 'true', true, class: 'js-ignore-case'
          = label_tag 'ignore_case', "Ignore Case"
        %p.todo
          = check_box_tag 'ignore_punctuation', 'true', false, disabled: true
          = label_tag 'ignore_punctuation', "Ignore Punctuation (TODO)"

      = submit_tag "Diff Me"
